{
  "parser": "babel-eslint",
  "extends": "standard",
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "semi": ["error", "always"],
    "comma-dangle": ["error", "only-multiline"],
    "quotes": ["error", "double"],
    "react/function-component-definition": "off"
  }
}